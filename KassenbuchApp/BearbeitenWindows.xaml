<Window x:Class="KassenbuchApp.BearbeitenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eintrag bearbeiten" Height="600" Width="500"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Margin="0 0 0 20">
            <Label Content="Datum:" Foreground="White" />
            <DatePicker x:Name="dpDatum" SelectedDateFormat="Short"
                        Background="White" Foreground="Black"
                        BorderBrush="#555" Height="30" />

            <Label Content="Einnahme (€):" Foreground="White" />
            <TextBox x:Name="txtEinnahme" Background="White" Foreground="Black"
                     BorderBrush="#555" Height="30" />

            <Label Content="Käufer/Zweck:" Foreground="White" />
            <TextBox x:Name="txtZweckEinnahme" Background="White" Foreground="Black"
                     BorderBrush="#555" Height="30" />

            <Label Content="Verkaufte Artikel:" Foreground="White" />
            <TextBox x:Name="txtArtikel" Background="White" Foreground="Black"
                     BorderBrush="#555" Height="30" />

            <Label Content="Ausgabe (€):" Foreground="White" />
            <TextBox x:Name="txtAusgabe" Background="White" Foreground="Black"
                     BorderBrush="#555" Height="30" />

            <Label Content="Zweck der Ausgabe:" Foreground="White" />
            <TextBox x:Name="txtZweckAusgabe" Background="White" Foreground="Black"
                     BorderBrush="#555" Height="30" />

            <Label Content="Bezahlmethode:" Foreground="White" />
            <ComboBox x:Name="cmbBezahlmethode"
                      Background="White" Foreground="Black"
                      BorderBrush="#555" Height="30">
                <ComboBoxItem Content="Bar" />
                <ComboBoxItem Content="Überweisung" />
                <ComboBoxItem Content="PayPal" />
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Abbrechen" Width="100" Height="35" Margin="0 0 10 0"
                    Background="#3E3E42" Foreground="White" BorderBrush="#666"
                    Click="Abbrechen_Click" />
            <Button Content="Speichern" Width="100" Height="35"
                    Background="#007ACC" Foreground="White" BorderBrush="#007ACC"
                    Click="Speichern_Click" />
        </StackPanel>
    </Grid>
</Window>
